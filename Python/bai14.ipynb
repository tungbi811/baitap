    "verb = input(\"Input a verb: \")\n",
    "consonant = ['u','e','o','a','i']\n",
    "\n",
    "if verb.endswith(\"ie\"):\n",
    "    v_ing = verb[:-2]+\"y\"+\"ing\"\n",
    "elif verb.endswith(\"e\"):\n",
    "    v_ing = verb[:-1]+\"ing\"\n",
    "elif verb[-1] in consonant:\n",
    "    v_ing = verb+verb[-1]+\"ing\"\n",
    "else:\n",
    "    v_ing = verb+\"ing\"\n",
    "\n",
    "print(v_ing)"
   ]
